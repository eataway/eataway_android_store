<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:background="@color/list_line">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white"
        android:paddingTop="15dp"
        android:paddingBottom="10dp"
        android:layout_alignTop="@+id/imageView"
        android:layout_marginBottom="5dp">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_in_progress_dishname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">
            <TextView
                android:id="@+id/num_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ding_dan_hao"
                android:layout_marginRight="5dp"/>
            <TextView
                android:id="@+id/tv_in_progress_order_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="152333333333"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@id/num_info"/>
            <TextView
                android:id="@+id/tv_in_progress_client_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@id/tv_in_progress_order_num" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">
            <TextView
                android:id="@+id/tv_in_progress_order_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/xia_dan_shi_jian"
                android:layout_marginBottom="5dp"/>
            <TextView
                android:id="@+id/tv_in_progress_order_time_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tv_in_progress_order_time"
                android:layout_alignParentRight="true"
                android:text="00:00"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">
            <TextView
                android:id="@+id/tv_in_progress_delivery_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/song_da_shi_jian"
                android:layout_marginBottom="5dp"/>
            <TextView
                android:id="@+id/tv_in_progress_delivery_time_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
            </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">
            <TextView
                android:id="@+id/tv_in_progress_remarks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/kou_wei_bei_zhu"
                android:layout_marginRight="5dp"/>
            <TextView
                android:id="@+id/tv_in_progress_remarks_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:text="No chili"
                android:textColor="@color/color_orange"
                android:layout_alignBottom="@id/tv_in_progress_remarks"
                android:layout_toRightOf="@id/tv_in_progress_remarks"/>
        </RelativeLayout>

        <View
            android:id="@+id/list_line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/list_line"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_in_progress_location"
                android:background="@drawable/img_local_gray"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="5dp"/>
            <TextView
                android:id="@+id/tv_in_progress_location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:layout_toRightOf="@id/iv_in_progress_location"
                android:text="长安区和平路256号"
                android:textColor="@color/text_black"/>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/tv_in_progress_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/color_orange"
                    android:text="0.2km" />
            </RelativeLayout>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginBottom="10dp">
            <ImageView
                android:id="@+id/iv_in_progress_phone"
                android:background="@drawable/img_phone_gray"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="5dp"/>
            <TextView
                android:id="@+id/tv_in_progress_phone"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_in_progress_phone"
                android:text="长安区和平路256号"
                android:textColor="@color/text_black"/>
            <TextView
                android:id="@+id/tv_in_progress_delivery_fee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/color_orange"
                android:text="$5"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/tv_in_progress_delivery_fee"
                android:text="@string/pei_song_fei"
                android:textColor="@color/text_gray"/>
        </RelativeLayout>

        <View
            android:id="@+id/list_line3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/list_line"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">
            <TextView
                android:id="@+id/tv_in_progress_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$33"
                android:textColor="@color/color_orange"
                android:textSize="14sp"
                android:layout_alignParentRight="true"/>
            <TextView
                android:layout_toLeftOf="@+id/tv_in_progress_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zong_ji"
                android:textSize="14sp"
                android:textColor="@color/color_orange"
                android:layout_marginRight="10dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">
            <TextView
                android:id="@+id/tv_in_progress_refund"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shen_qing_tui_dan"
                android:textColor="@color/color_blue"
                android:layout_centerVertical="true"/>
            <Button
                android:id="@+id/btn_in_progress"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/shape_orange"
                android:text="@string/jie_dan"
                android:textColor="@color/color_white"
                android:textAllCaps="false"/>
            <TextView
                android:visibility="gone"
                android:id="@+id/tv_in_progress"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="@string/yi_wan_cheng"
                android:layout_alignParentRight="true"
                android:textColor="@color/color_orange"/>
        </RelativeLayout>
    </LinearLayout>
    <ImageView
        android:background="@drawable/img_tag_left"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/imageView" />
    <TextView
        android:id="@+id/tv_in_progress_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="1"
        android:textColor="@color/color_white"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>
</RelativeLayout>