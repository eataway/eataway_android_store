<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rl_item_shop_income_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white">
        <TextView
            android:id="@+id/tv_shop_income_order_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单号：zx1234556"
            android:textColor="@color/text_black"
            android:layout_margin="10dp"/>
        <TextView
            android:id="@+id/tv_activity_shop_income_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="+$15"
            android:textColor="@color/color_blue"
            android:layout_margin="10dp"/>
        <TextView
            android:id="@+id/tv_shop_income_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_shop_income_order_number"
            android:text="2017-06-12 16:10"
            android:textColor="@color/text_gray"
            android:textSize="12sp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/tv_shop_income_order_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/yi_dao_zhang"
            android:layout_below="@id/tv_activity_shop_income_price"
            android:layout_alignParentRight="true"
            android:textColor="@color/text_gray"
            android:textSize="12sp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/tv_shop_income_date"
            android:background="@color/list_line"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_load_more"
        android:text="@string/dian_ji_jia_zai"
        android:textColor="@color/text_black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:gravity="center"/>
</RelativeLayout>