<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_gray"
    tools:context="com.administrator.administrator.eataway.activity.ShopTimeConfigActivity">
    <com.administrator.administrator.eataway.view.TopBar
        android:id="@+id/tp_shop_time_config"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_notice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="12sp"
        android:visibility="gone"
        android:text="@string/qing_zhu_yi_ci_ci_she_zhi_jiang_hui_fu_gai"/>
    <RelativeLayout android:id="@+id/rl_activity_shop_time_config_open"
        style="@style/PersonPageList">
        <TextView
            android:id="@+id/tv_shop_time_config_open"
            android:text="@string/kai_shi_shi_jian"
            android:textColor="@color/text_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"/>
        <TextView
            android:id="@+id/tv_activity_shop_time_config_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_shop_time_config_open"
            android:textColor="@color/text_gray"/>
        <ImageView
            style="@style/PersonPageMoreIcon" />
    </RelativeLayout>
    <RelativeLayout android:id="@+id/rl_activity_shop_time_config_close"
        style="@style/PersonPageList" android:layout_marginBottom="10dp">
        <TextView
            android:id="@+id/tv_shop_time_config_close"
            android:text="@string/jie_shu_shi_jian"
            android:textColor="@color/text_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"/>
        <TextView
            android:id="@+id/tv_activity_shop_time_config_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_shop_time_config_close"
            android:textColor="@color/text_gray"/>
        <ImageView
            style="@style/PersonPageMoreIcon" />
    </RelativeLayout>

    <RelativeLayout android:id="@+id/rl_shop_time_second_open"
        style="@style/PersonPageList">
        <TextView
            android:id="@+id/tv_shop_time_config_second_open"
            android:text="@string/kai_shi_shi_jian_xuan"
            android:textColor="@color/text_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"/>
        <TextView
            android:id="@+id/tv_activity_shop_time_config_second_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_shop_time_config_second_open"
            android:textColor="@color/text_gray"/>
        <ImageView
            style="@style/PersonPageMoreIcon" />
    </RelativeLayout>
    <RelativeLayout android:id="@+id/rl_shop_time_second_close"
        style="@style/PersonPageList" android:layout_marginBottom="20dp">
        <TextView
            android:id="@+id/tv_shop_time_config_second_close"
            android:text="@string/jie_shu_shi_jian_xuan"
            android:textColor="@color/text_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"/>
        <TextView
            android:id="@+id/tv_activity_shop_time_config_second_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_shop_time_config_second_close"
            android:textColor="@color/text_gray"/>
        <ImageView
            style="@style/PersonPageMoreIcon" />
    </RelativeLayout>
    <Button
        android:id="@+id/btn_activity_shop_timg_config_ok"
        android:text="@string/text_ok"
        android:textColor="@color/color_white"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/shape_orange"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
</LinearLayout>
