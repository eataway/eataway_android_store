<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.administrator.administrator.eataway.activity.ResetPwdActivity">
    <com.administrator.administrator.eataway.view.TopBar
        android:id="@+id/tp_reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">
        <ImageView
            android:background="@drawable/img_logo"
            android:layout_width="70dp"
            android:layout_height="70dp" />
        <TextView
            android:text="EatAway"
            android:textSize="15sp"
            android:textColor="@color/text_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"/>
    </LinearLayout>
    <LinearLayout style="@style/LoginPage_LinearLayout"
        android:layout_marginBottom="10dp">
        <ImageView
            android:background="@drawable/img_icon_user"
            android:layout_width="@dimen/login_item_size"
            android:layout_height="@dimen/login_item_size"
            android:layout_marginRight="20dp"/>
        <EditText
            android:inputType="number"
            android:id="@+id/et_activity_reset_usernum"
            android:hint="@string/please_enter_the_cell_phone_number"
            style="@style/LoginPage_EditText"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/login_item_margin"
        android:layout_marginRight="@dimen/login_item_margin"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shape_gray"
        android:paddingLeft="10dp">
        <ImageView
            android:id="@+id/iv_activity_reset_code"
            android:background="@drawable/img_icon_code"
            android:layout_width="@dimen/login_item_size"
            android:layout_height="@dimen/login_item_size"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"/>
        <EditText
            android:inputType="number"
            android:id="@+id/et_activity_reset_code"
            android:hint="@string/please_enter_the_verification_code"
            style="@style/LoginPage_EditText"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_activity_reset_code"/>
        <Button
            android:id="@+id/btn_activity_reset_code"
            android:text="@string/get_verification_code"
            android:textColor="@color/color_white"
            android:textSize="10sp"
            android:layout_width="80dp"
            android:textAllCaps="false"
            android:layout_height="match_parent"
            android:background="@drawable/shape_gray_half_corner_default"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <LinearLayout style="@style/LoginPage_LinearLayout"
        android:layout_marginBottom="10dp">
        <ImageView
            android:background="@drawable/img_icon_password"
            android:layout_width="@dimen/login_item_size"
            android:layout_height="@dimen/login_item_size"
            android:layout_marginRight="20dp"/>

        <EditText
            android:id="@+id/et_activity_reset_password"
            style="@style/LoginPage_EditText"
            android:hint="@string/please_confirm_the_password" />
    </LinearLayout>
    <LinearLayout style="@style/LoginPage_LinearLayout">
        <ImageView
            android:background="@drawable/img_icon_password"
            android:layout_width="@dimen/login_item_size"
            android:layout_height="@dimen/login_item_size"
            android:layout_marginRight="20dp"/>
        <EditText
            android:id="@+id/et_activity_reset_confirm"
            android:hint="@string/please_confirm_the_password"
            style="@style/LoginPage_EditText"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_activity_reset_reset"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="@dimen/login_item_margin"
        android:layout_marginRight="@dimen/login_item_margin"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_blue"
        android:text="@string/chong_zhi_mi_ma"
        android:textAllCaps="false"
        android:textColor="@color/color_white"
        android:textSize="16sp" />
