<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:background="@drawable/shape_white"
    android:layout_marginLeft="20dp" android:layout_marginRight="20dp">
    <TextView
        android:text="@string/qing_shu_ru_xiu_gai_xin_xi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/text_black"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/list_line"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:gravity="center">
        <TextView
            android:id="@+id/tv_fee_config"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$"
            android:textSize="20sp"
            android:textColor="@color/text_black"/>
       <EditText
           android:id="@+id/et_fee_config"
           android:layout_width="100dp"
           android:layout_height="50dp"
           android:background="@drawable/shape_gray"
           android:layout_marginLeft="20dp"
           android:layout_marginRight="20dp"
           android:inputType="number"
           android:textColor="@color/text_black"
           android:gravity="center"/>
        <TextView
            android:id="@+id/tv_km_config"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="km"
            android:textSize="20sp"
            android:textColor="@color/text_black"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/list_line"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_dialog_delete"
            android:text="@string/text_delete"
            android:textSize="16sp"
            android:textColor="@color/color_red"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textAllCaps="false"
            android:background="@drawable/shape_white_half_corner_left"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/list_line"/>
        <Button
            android:id="@+id/btn_dialog_ok"
            android:text="@string/text_ok"
            android:textSize="16sp"
            android:textColor="@color/text_black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textAllCaps="false"
            android:background="@drawable/shape_white_half_corner_right"/>
    </LinearLayout>

</LinearLayout>