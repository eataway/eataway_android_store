<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.administrator.administrator.eataway.activity.ShopAddressConfigActivity"
    android:background="@color/color_white">
    <com.administrator.administrator.eataway.view.TopBar
        android:id="@+id/tp_address_config"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="@string/qing_xuan_ze_nin_de_di_zhi"
        android:textColor="@color/text_black"
        android:textSize="15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"/>
    <RelativeLayout
        android:id="@+id/rl_address_config_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_gray"
        android:padding="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp">
        <TextView
            android:id="@+id/tv_address_config_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Heping Road"
            android:textColor="@color/text_gray" />
    </RelativeLayout>
    <TextView
        android:text="@string/di_zhi_bu_chong"
        android:textColor="@color/text_black"
        android:textSize="15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"/>
    <EditText
        android:id="@+id/et_address_config"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/shape_gray"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        android:gravity="top"
        android:textColor="@color/text_gray"
        android:textSize="12sp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <Button
            android:id="@+id/btn_address_config_ok"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/shape_orange"
            android:layout_alignParentBottom="true"
            android:text="@string/text_ok"
            android:textColor="@color/color_white"/>
    </RelativeLayout>
</LinearLayout>
